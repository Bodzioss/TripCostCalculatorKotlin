<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/additionalCostNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="Nazwa kosztu"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/additionalCostPriceLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/additionalCostPriceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="Koszt"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/unityLabel"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/unityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="km"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/deleteAdditionalCost"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteAdditionalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="x"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>